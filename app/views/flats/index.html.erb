<%= render "nav"%>


<div class="container mt-3">
  <h1>All our flats</h1>
  <p>All <%= @flats.count %> flats</p>
  <div class="row">
    <% @flats.each do |flat| %>

    <div class="col-4 d-flex align-items-stretch">
      <div class="card flat-card mb-4"">
          <img src=" ..." class="card-img-top" alt="...">
        <div class="card-body bg-light">
          <h5 class="card-title d-flex align-items-stretch"><%= flat.name %> in <%= flat.address %></h5>
          <p class="card-text"><%= flat.description %></p>
          <div class="d-flex justify-content-start">
            <div class="flex pr-4">
              <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-people-fill" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5z" />
              </svg>
              <span><%= flat.number_of_guests %></span>
            </div>
            <div class="flex">
              <span><strong>$</strong> <%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
        <div class="card-body">
          <a href="#" class="card-link"> <%= link_to "More info", flat_path(flat)%></a>
          <a href="#" class="card-link text-danger">Edit</a>
          <a href="#" class="card-link text-warning">Remove</a>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

